package com.service_booking.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.service_booking.entity.Provider;
import com.service_booking.entity.Services;
import com.service_booking.service.ServiceService;

@RestController
@RequestMapping("/api/services")
@CrossOrigin("*")
public class ServiceController {

    @Autowired
    private ServiceService serviceService;

    @PostMapping("/add")
    public Service addService(@RequestBody Services services,
                              @RequestParam Long providerId) {

        Provider provider = new Provider();
        provider.setId(providerId);

        return serviceService.addService(services, provider);
    }

    @GetMapping("/search")
    public List<Service> search(@RequestParam String keyword) {
        return serviceService.searchService(keyword);
    }
}
