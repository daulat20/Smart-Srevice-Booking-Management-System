package com.service_booking.repository;

import com.service_booking.entity.Booking;
import com.service_booking.entity.User;
import com.service_booking.entity.Service;
import org.springframework.data.jpa.repository.JpaRepository;

import java.util.List;

public interface BookingRepository extends JpaRepository<Booking, Long> {

    List<Booking> findByUser(User user);

    List<Booking> findByService(Service service);

    List<Booking> findByStatus(String status);
}
